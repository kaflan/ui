{
  "name": "codepress",
  "version": "0.1.8",
  "bin": {
    "codepress": "./bin/codepress.js"
  },
  "files": [
    "dist",
    "bin",
    "lib"
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
    "frontend": "vue-cli-service serve",
    "backend": "cd example && ../bin/codepress.js",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint --fix && vue-cli-service lint lib/** --fix",
    "test": "ava",
    "test:watch": "ava -w"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@codeceptjs/configure": "^0.4.0",
    "ava": "^2.4.0",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.3",
    "chokidar": "^3.3.0",
    "codeceptjs": "^2.3.6",
    "commander": "^3.0.2",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "lodash.clonedeep": "^4.5.0",
    "puppeteer": "^1.20.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0"
  },
  "devDependencies": {
    "@medv/finder": "^1.1.1",
    "@vue/cli-plugin-babel": "^3.12.1",
    "@vue/cli-plugin-eslint": "^3.12.1",
    "@vue/cli-service": "^3.12.1",
    "@vue/eslint-config-prettier": "^6.0.0",
    "ansi-to-html": "^0.6.13",
    "babel-eslint": "^10.0.3",
    "buefy": "^0.8.8",
    "copy-text-to-clipboard": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "moment": "^2.24.0",
    "prismjs": "^1.17.1",
    "sass": "^1.23.7",
    "sass-loader": "^7.1.0",
    "tailwindcss": "^1.1.4",
    "uuid": "^3.3.3",
    "vue": "^2.6.10",
    "vue-highlightjs": "^1.3.3",
    "vue-prism-editor": "^0.3.0",
    "vue-router": "^3.1.3",
    "vue-socket.io": "^3.0.7",
    "vue-template-compiler": "^2.6.10",
    "vuex": "^3.1.2",
    "webdriverio": "^5.16.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "plugin:vue/strongly-recommended",
      "eslint:recommended"
    ],
    "rules": {
      "vue/script-indent": [
        "error",
        2,
        {
          "baseIndent": 0,
          "switchCase": 2
        }
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "sort-imports": [
        "error",
        {
          "ignoreCase": false,
          "ignoreDeclarationSort": true,
          "ignoreMemberSort": false,
          "memberSyntaxSortOrder": [
            "none",
            "all",
            "multiple",
            "single"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "src/**",
          "lib/**"
        ]
      }
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
